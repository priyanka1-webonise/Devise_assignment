<div class="row">
  <div class="code span14 offset 13"><h2>Manage Products</h2></div>
</div>
<br>
<div>

      <table  class="table table-hover">
        <tr>
          <th>PRODUCTS</th>
          <th>ACTIONS</th>
        </tr>
        <% @products.each do |product| %>
         <tr>
            <td>
              <div class="control-group">
                 <%= product.name %>
              </div>
            </td>
            <td>
               <div class="control-group">
                <span><%= link_to "edit", edit_admin_product_path(product), :method => :get %></span>
                <span><%=  link_to "delete", admin_product_path(product), :confirm => 'Are you sure?', :method => :delete %></span>
               </div>
            </td>
         </tr>
        <%end %>
         <tr>
           <td>
             <span><%= link_to "create product",new_admin_product_path %></span>

           </td>
         </tr>
        <tr></tr>
        <tr></tr>
      </table>

</div>