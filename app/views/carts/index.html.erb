<div class="code span14 offset 13"><h2>View Carts</h2></div>

<table class="table table-hover">
  <tr>
    <th>NAME</th>
    <th>PRICE</th>
    <th>QUANTITY</th>
    <th>TOTAL</th>
    <th>Remove From Cart</th>
  </tr>
   <% @order.line_items.each do |line_item| %>
        <tr>
          <td>
            <div class="control-group">
              <%= line_item.product.name %>
            </div>
          </td>
          <td>
            <div class="control-group">
              <%= line_item.product.price %>
            </div>
          </td>
          <td>
            <div class="control-group">
              <%= form_for line_item  do |f| %>
                <%= f.number_field :product_quantity %>
                <%= f.submit 'Update', :class => "btn btn-small btn-primary" %>
              <% end %>
            </div>
          </td>
          <td>
            <div class="control-group">
              <%= line_item.sub_total %>
            </div>
          </td>
           <td>
            <div class="control-group">
              <div class="control-group">
                <%=  link_to image_tag("glyphicons_192_circle_remove.png" ),cart_path( line_item.id),:confirm => "Are you sure?", :method => :delete %>
              </div>
            </div>
          </td>
          <td>
            <div class="control-group">
              <div class="control-group">
              </div>
            </div>
          </td>
        </tr>
   <% end %>
   <tr>
     <td colspan="2">
       <h5>Order total</h5>
       <div class="order_total"></div>
         </td>
     <td colspan="3">
         <%= @order.order_total%>
     </td>
   </tr>
  <tr>
    <td colspan="2">
      <%=  link_to "Continue Shopping",products_path,:class => "btn btn-small btn-primary" %>
    </td>
    <td colspan="3">
      <%=  link_to "Checkout",checkouts_path,:class => "btn btn-small btn-primary" %>
    </td>
  </tr>
</table>